    <script>
        let ndbEntries = [];
        let isNineHole = false;
        let isScorecardHoleByHole = false; // false = Gesamt, true = 18 Felder

        function selectPar(value) {
            document.getElementById('par').value = value;
            
            const buttons = document.querySelectorAll('.par-select-btn');
            buttons.forEach(btn => {
                btn.classList.remove('active');
                if (parseInt(btn.textContent) === value) {
                    btn.classList.add('active');
                }
            });
            
            calculatePlayingHandicap();
        }

        function toggleNineHole() {
            isNineHole = !isNineHole;
            const toggle = document.getElementById('nineHoleToggle');
            const checkbox = document.getElementById('nineHoleCheckbox');
            
            if (isNineHole) {
                toggle.classList.add('active');
                checkbox.checked = true;
                
                document.getElementById('crModeLabel').textContent = '9-Loch Wert verwenden';
                document.getElementById('parModeLabel').textContent = '9-Loch Wert verwenden';
                document.getElementById('courseRating').placeholder = 'z.B. 36.2';
                
                document.getElementById('parBtn1').textContent = '34';
                document.getElementById('parBtn1').onclick = function() { selectPar(34); };
                document.getElementById('parBtn2').textContent = '35';
                document.getElementById('parBtn2').onclick = function() { selectPar(35); };
                document.getElementById('parBtn3').textContent = '36';
                document.getElementById('parBtn3').onclick = function() { selectPar(36); };
                
                document.getElementById('par').value = '';
                document.querySelectorAll('.par-select-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
            } else {
                toggle.classList.remove('active');
                checkbox.checked = false;
                
                document.getElementById('crModeLabel').textContent = '18-Loch Wert verwenden';
                document.getElementById('parModeLabel').textContent = '18-Loch Wert verwenden';
                document.getElementById('courseRating').placeholder = 'z.B. 72.5';
                
                document.getElementById('parBtn1').textContent = '70';
                document.getElementById('parBtn1').onclick = function() { selectPar(70); };
                document.getElementById('parBtn2').textContent = '71';
                document.getElementById('parBtn2').onclick = function() { selectPar(71); };
                document.getElementById('parBtn3').textContent = '72';
                document.getElementById('parBtn3').onclick = function() { selectPar(72); };
                
                document.getElementById('par').value = '';
                document.querySelectorAll('.par-select-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
            }
            
            calculatePlayingHandicap();
            calculateScoreDifferential();
        }

        function toggleScorecardMode() {
            isScorecardHoleByHole = !isScorecardHoleByHole;
            const toggle = document.getElementById('scorecardToggle');
            const checkbox = document.getElementById('scorecardCheckbox');
            const bulkInput = document.getElementById('bulkInput');
            const gridInput = document.getElementById('gridInput');
            const label = document.getElementById('scoreToggleLabel');
            
            if (isScorecardHoleByHole) {
                // Loch-für-Loch
                toggle.classList.add('active');
                checkbox.checked = true;
                bulkInput.style.display = 'none';
                gridInput.style.display = 'block';
                label.firstChild.textContent = 'Loch für Loch';
                calculateTotals();
            } else {
                // Gesamte Schlagzahl
                toggle.classList.remove('active');
                checkbox.checked = false;
                bulkInput.style.display = 'block';
                gridInput.style.display = 'none';
                label.firstChild.textContent = 'Gesamte Schlagzahl';
                calculateTotals();
            }
        }

        function initializeScoreInputs() {
            const grid = document.getElementById('scoresGrid');
            grid.innerHTML = '';
            for (let i = 1; i <= 18; i++) {
                const input = document.createElement('input');
                input.type = 'number';
                input.className = 'score-input';
                input.placeholder = i;
                input.min = '1';
                input.setAttribute('inputmode', 'numeric');
                input.dataset.index = i;
                
                input.addEventListener('input', function(e) {
                    calculateTotals();
                    if (e.target.value && e.target.value.length >= 1) {
                        const nextIndex = parseInt(e.target.dataset.index) + 1;
                        if (nextIndex <= 18) {
                            const nextInput = document.querySelector(`input[data-index="${nextIndex}"]`);
                            if (nextInput) {
                                setTimeout(() => nextInput.focus(), 80);
                            }
                        }
                    }
                });

                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        const nextIndex = parseInt(e.target.dataset.index) + 1;
                        if (nextIndex <= 18) {
                            const nextInput = document.querySelector(`input[data-index="${nextIndex}"]`);
                            if (nextInput) {
                                nextInput.focus();
                            }
                        }
                    }
                });
                
                grid.appendChild(input);
            }
        }

        function resetScores() {
            document.getElementById('bulkTotalStrokes').value = '';
            const scoreInputs = document.querySelectorAll('.score-input');
            scoreInputs.forEach(input => input.value = '');
            calculateTotals();
        }

        function calculatePlayingHandicap() {
            let handicapIndex = parseFloat(document.getElementById('handicapIndex').value);
            const slopeRating = parseFloat(document.getElementById('slopeRating').value);
            const courseRating = parseFloat(document.getElementById('courseRating').value);
            const par = parseFloat(document.getElementById('par').value);
            
            if (handicapIndex && slopeRating && courseRating && par) {
                let formulaText = '';
                let originalHandicap = handicapIndex;
                
                if (isNineHole) {
                    handicapIndex = Math.round(handicapIndex / 2 * 10) / 10;
                    formulaText = `9-Loch: (${originalHandicap}/2) × (${slopeRating}/113) + (${courseRating} - ${par}) = ${handicapIndex} × (${slopeRating}/113) + (${courseRating} - ${par})`;
                } else {
                    formulaText = `18-Loch: ${handicapIndex} × (${slopeRating}/113) + (${courseRating} - ${par})`;
                }
                
                const playingHandicap = Math.round(handicapIndex * slopeRating / 113 + (courseRating - par));
                document.getElementById('playingHandicap').textContent = playingHandicap;
                
                const exactResult = handicapIndex * slopeRating / 113 + (courseRating - par);
                formulaText += ` = ${exactResult.toFixed(2)} → ${playingHandicap} (gerundet)`;
                
                document.getElementById('spielvorgabeFormulaInfo').style.display = 'block';
                document.getElementById('spielvorgabeFormulaText').textContent = formulaText;
                
                calculateScoreDifferential();
            } else {
                document.getElementById('spielvorgabeFormulaInfo').style.display = 'none';
                document.getElementById('playingHandicap').textContent = '-';
            }
        }

        function addNDB() {
            const playingHandicap = parseInt(document.getElementById('playingHandicap').textContent);
            const strokeIndex = parseInt(document.getElementById('strokeIndex').value);
            const holePar = parseInt(document.getElementById('holePar').value);
            
            if (!isNaN(playingHandicap) && strokeIndex && holePar) {
                let strokes = 0;
                
                if (playingHandicap >= strokeIndex) strokes++;
                if (playingHandicap >= 18 + strokeIndex) strokes++;
                if (playingHandicap >= 36 + strokeIndex) strokes++;
                if (playingHandicap >= 54 + strokeIndex) strokes++;
                
                const ndb = holePar + strokes + 2;
                
                ndbEntries.push({
                    strokeIndex: strokeIndex,
                    par: holePar,
                    strokes: strokes,
                    ndb: ndb
                });
                
                updateNDBList();
                calculateTotals();
                
                document.getElementById('strokeIndex').value = '';
                document.getElementById('holePar').value = '';
            }
        }

        function updateNDBList() {
            const list = document.getElementById('ndbList');
            list.innerHTML = '';
            
            ndbEntries.forEach((entry, index) => {
                const div = document.createElement('div');
                div.className = 'ndb-entry';
                div.innerHTML = `
                    <div class="ndb-info">
                        <div>
                            <div class="ndb-label">SI ${entry.strokeIndex}</div>
                            <div class="ndb-value">${entry.ndb}</div>
                        </div>
                        <div>
                            <div class="ndb-label">Par ${entry.par}</div>
                            <div class="ndb-label">+${entry.strokes} Vorgabe</div>
                        </div>
                    </div>
                    <button class="remove-btn" onclick="removeNDB(${index})">Entfernen</button>
                `;
                list.appendChild(div);
            });
        }

        function removeNDB(index) {
            ndbEntries.splice(index, 1);
            updateNDBList();
            calculateTotals();
        }

        function calculateTotals() {
            let strokesSum = 0;
            
            if (isScorecardHoleByHole) {
                // 18 Felder
                const scoreInputs = document.querySelectorAll('.score-input');
                scoreInputs.forEach(input => {
                    if (input.value) {
                        strokesSum += parseInt(input.value);
                    }
                });
            } else {
                // Gesamtschlagzahl
                const bulkVal = parseInt(document.getElementById('bulkTotalStrokes').value);
                if (!isNaN(bulkVal)) {
                    strokesSum = bulkVal;
                }
            }
            
            let ndbSum = 0;
            ndbEntries.forEach(entry => {
                ndbSum += entry.ndb;
            });
            
            document.getElementById('totalStrokes').textContent = strokesSum;
            document.getElementById('totalNDB').textContent = ndbSum;
            document.getElementById('grossScore').textContent = strokesSum + ndbSum;
            
            calculateScoreDifferential();
        }

        function calculateScoreDifferential() {
            const grossScore = parseInt(document.getElementById('grossScore').textContent);
            const courseRating = parseFloat(document.getElementById('courseRating').value);
            const slopeRating = parseFloat(document.getElementById('slopeRating').value);
            const handicapIndex = parseFloat(document.getElementById('handicapIndex').value);
            
            if (grossScore && courseRating && slopeRating) {
                let differential;
                let formulaText = '';
                
                if (isNineHole) {
                    differential = (grossScore - courseRating) * (113 / slopeRating);
                    
                    if (handicapIndex) {
                        differential += (handicapIndex * 0.52) + 1.2;
                        formulaText = `9-Loch: (${grossScore} - ${courseRating}) × (113 / ${slopeRating}) + (${handicapIndex} × 0.52) + 1.2`;
                    } else {
                        formulaText = `9-Loch: (${grossScore} - ${courseRating}) × (113 / ${slopeRating})`;
                    }
                } else {
                    differential = (grossScore - courseRating) * (113 / slopeRating);
                    formulaText = `18-Loch: (${grossScore} - ${courseRating}) × (113 / ${slopeRating})`;
                }
                
                document.getElementById('scoreDifferential').textContent = differential.toFixed(1);
                
                document.getElementById('formulaInfo').style.display = 'block';
                document.getElementById('formulaText').textContent = formulaText;
            } else {
                document.getElementById('formulaInfo').style.display = 'none';
                document.getElementById('scoreDifferential').textContent = '-';
            }
        }

        function resetAll() {
            if (confirm('Möchten Sie wirklich alle Eingaben zurücksetzen?')) {
                document.getElementById('handicapIndex').value = '';
                document.getElementById('slopeRating').value = '';
                document.getElementById('courseRating').value = '';
                document.getElementById('par').value = '';
                document.getElementById('playingHandicap').textContent = '-';
                
                document.getElementById('bulkTotalStrokes').value = '';
                const scoreInputs = document.querySelectorAll('.score-input');
                scoreInputs.forEach(i => i.value = '');
                
                document.getElementById('strokeIndex').value = '';
                document.getElementById('holePar').value = '';
                
                ndbEntries = [];
                updateNDBList();
                
                isNineHole = false;
                document.getElementById('nineHoleToggle').classList.remove('active');
                document.getElementById('nineHoleCheckbox').checked = false;
                
                isScorecardHoleByHole = false;
                document.getElementById('scorecardToggle').classList.remove('active');
                document.getElementById('scorecardCheckbox').checked = false;
                document.getElementById('bulkInput').style.display = 'block';
                document.getElementById('gridInput').style.display = 'none';
                document.getElementById('scoreToggleLabel').firstChild.textContent = 'Gesamte Schlagzahl';
                
                document.getElementById('totalStrokes').textContent = '0';
                document.getElementById('totalNDB').textContent = '0';
                document.getElementById('grossScore').textContent = '0';
                document.getElementById('scoreDifferential').textContent = '-';
                
                document.getElementById('formulaInfo').style.display = 'none';
                document.getElementById('spielvorgabeFormulaInfo').style.display = 'none';
                
                document.getElementById('crModeLabel').textContent = '18-Loch Wert verwenden';
                document.getElementById('parModeLabel').textContent = '18-Loch Wert verwenden';
                document.getElementById('courseRating').placeholder = 'z.B. 72.5';
                
                document.getElementById('parBtn1').textContent = '70';
                document.getElementById('parBtn1').onclick = function() { selectPar(70); };
                document.getElementById('parBtn2').textContent = '71';
                document.getElementById('parBtn2').onclick = function() { selectPar(71); };
                document.getElementById('parBtn3').textContent = '72';
                document.getElementById('parBtn3').onclick = function() { selectPar(72); };
                document.querySelectorAll('.par-select-btn').forEach(btn => btn.classList.remove('active'));

                document.getElementById('handicapIndex').focus();
            }
        }

        // Event listeners
        document.getElementById('handicapIndex').addEventListener('input', calculatePlayingHandicap);
        document.getElementById('slopeRating').addEventListener('input', calculatePlayingHandicap);
        document.getElementById('courseRating').addEventListener('input', calculatePlayingHandicap);
        document.getElementById('par').addEventListener('input', function() {
            document.querySelectorAll('.par-select-btn').forEach(btn => btn.classList.remove('active'));
            calculatePlayingHandicap();
        });
        document.getElementById('handicapIndex').addEventListener('input', calculateScoreDifferential);
        document.getElementById('bulkTotalStrokes').addEventListener('input', calculateTotals);

        // Init
        initializeScoreInputs();
    </script>
</body>
</html>
